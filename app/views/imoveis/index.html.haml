.card
  .card-header.d-flex.justify-content-between.align-items-center
    %h2 Lista de Imóveis

    = link_to new_imovel_path, remote: true, class: 'btn btn-primary', title: 'Novo imóvel' do
      %i.fas.fa-plus
      Novo

  .card-body
    - if @imoveis.present?  
      = render 'imoveis/lista'
    - else
      %p.text-muted Nenhum imóvel cadastrado no momento
